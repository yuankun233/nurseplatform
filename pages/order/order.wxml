<!--pages/order/order.wxml-->

<!-- 标题 -->

<view class="title">
  订单
</view>
<!-- tab栏 -->
<mp-tabs
  tabs="{{tabs}}"
  tab-underline-color="#3488F8"
  tab-active-text-color="#3488F8"
>
  <block
    wx:for="{{tabs3}}"
    wx:key="item0"
    wx:for-item="item0"
  >

    <view
      class="item tab-content"
      data-set="{{item0.list}}"
      slot="tab-content-{{index}}"
      wx:for="{{item0.list}}"
      bind:tap="goorderdetail"
    >

      <view class="row-a1">
        <view class="name">{{item.name}}</view>
        <view class="status">
          {{item.status==false?'待服务':"已服务"}}
        </view>
      </view>
      <view class="row-a2">
        <view class="serve">
          {{item.type}}</view>
        <view class="hcb">
          {{item.hcb==true?'需要耗材包':'不需要耗材包'}}
        </view>
      </view>
      <view class="row-a3">
        <view class="text">
          <image
            class="time icon"
            src="../../assets/time.png"
            mode="aspectFit|aspectFill|widthFix"
            lazy-load="false"
            binderror=""
            bindload=""
          />
          服务时间：
          <view
            class=""
            selectable="false"
            space="false"
            decode="false"
            style="margin-right:10rpx"
          >
            {{item.servedate}}
          </view>
          {{item.servetime}}
        </view>
        <view class="text">
          <image
            class="msg icon"
            src="../../assets/msg.png"
            mode="aspectFit|aspectFill|widthFix"
            lazy-load="false"
            binderror=""
            bindload=""
          />
          情况描述：
          {{item.msg}}

        </view>
        <view class="text">
          <image
            class="address icon"
            src="../../assets/address.png"
            style="width:23rpx;height:29rpx"
            mode="aspectFit|aspectFill|widthFix"
            lazy-load="false"
            binderror=""
            bindload=""
          />
          地址：{{item.adress}}
        </view>
        <view class="text">
          <image
            class="money icon"
            src="../../assets/money.png"
            mode="aspectFit|aspectFill|widthFix"
            lazy-load="false"
            binderror=""
            bindload=""
          />
          此单可赚
          <view
            class="light"
            selectable="false"
            space="false"
            decode="false"
          >
            150
          </view>
          元
        </view>

      </view>
      <view class="btns">
        <view class="flexbox">
          <button class="calluser" size="mini">
            联系客户
          </button>
          <button class="go" size="mini">
            出发
          </button>
        </view>

      </view>

    </view>
  </block>

</mp-tabs>

